<?xml version="1.0"?>
<robot name="mycar">

  <!-- ───── MATERIALS ───── -->
  <material name="grey">
    <color rgba="0.5 0.5 0.5 1"/>
  </material>
  <material name="black">
    <color rgba="0.05 0.05 0.05 1"/>
  </material>
  <material name="blue">
    <color rgba="0 0 1 1"/>
  </material>
  <material name="yellow">
    <color rgba="1 1 0 1"/>
  </material>
  <material name="red">
    <color rgba="1 0 0 1"/>
  </material>

  <!-- ───── BASE LINK ───── -->
  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="4"/>
      <inertia ixx="0.10" iyy="0.25" izz="0.30" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.50 0.30 0.10"/>
      </geometry>
      <material name="grey"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.50 0.30 0.10"/>
      </geometry>
    </collision>
  </link>

  <!-- ───── WHEELS ───── -->
  <link name="front_left_wheel">
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.002" iyy="0.002" izz="0.003"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.08" length="0.05"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.08" length="0.05"/>
      </geometry>
    </collision>
    <contact>
      <lateral_friction value="2.0"/>
    </contact>
  </link>
  <joint name="front_left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child  link="front_left_wheel"/>
    <origin xyz="0.25 0.17 -0.03" rpy="0 0 0"/>
    <axis   xyz="0 1 0"/>
    <dynamics damping="0.7"/>
  </joint>

  <link name="front_right_wheel">
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.002" iyy="0.002" izz="0.003"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.08" length="0.05"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.08" length="0.05"/>
      </geometry>
    </collision>
    <contact>
      <lateral_friction value="2.0"/>
    </contact>
  </link>
  <joint name="front_right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child  link="front_right_wheel"/>
    <origin xyz="0.25 -0.17 -0.03" rpy="0 0 0"/>
    <axis   xyz="0 1 0"/>
    <dynamics damping="0.7"/>
  </joint>

  <link name="rear_left_wheel">
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.002" iyy="0.002" izz="0.003"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.08" length="0.05"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.08" length="0.05"/>
      </geometry>
    </collision>
    <contact>
      <lateral_friction value="2.0"/>
    </contact>
  </link>
  <joint name="rear_left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child  link="rear_left_wheel"/>
    <origin xyz="-0.25 0.17 -0.03" rpy="0 0 0"/>
    <axis   xyz="0 1 0"/>
    <dynamics damping="0.7"/>
  </joint>

  <link name="rear_right_wheel">
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.002" iyy="0.002" izz="0.003"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.08" length="0.05"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.08" length="0.05"/>
      </geometry>
    </collision>
    <contact>
      <lateral_friction value="2.0"/>
    </contact>
  </link>
  <joint name="rear_right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child  link="rear_right_wheel"/>
    <origin xyz="-0.25 -0.17 -0.03" rpy="0 0 0"/>
    <axis   xyz="0 1 0"/>
    <dynamics damping="0.7"/>
  </joint>

  <!-- ───── ARM PEDESTAL ───── -->
  <link name="arm_pedestal">
    <inertial>
      <origin xyz="0 0 0.05"/>
      <mass value="0.1"/>
      <inertia ixx="1e-4" iyy="1e-4" izz="1e-4" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <box size="0.04 0.04 0.10"/>
      </geometry>
      <material name="grey"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <box size="0.04 0.04 0.10"/>
      </geometry>
    </collision>
  </link>
  <joint name="arm_pedestal_fix" type="fixed">
    <parent link="base_link"/>
    <child  link="arm_pedestal"/>
    <origin xyz="0.30 0 0.05" rpy="0 0 0"/>
  </joint>

  <!-- ───── ARM LINK 1 (BLUE) ───── -->
  <link name="arm_link1">
    <inertial>
      <origin xyz="0 0 0.15"/>
      <mass value="0.6"/>
      <inertia ixx="4e-4" iyy="4e-4" izz="4e-4" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.15" rpy="0 0 -1.5708"/>
      <geometry>
        <box size="0.05 0.05 0.30"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.15" rpy="0 0 -1.5708"/>
      <geometry>
        <box size="0.05 0.05 0.30"/>
      </geometry>
    </collision>
  </link>
  <joint name="joint1" type="revolute">
    <parent link="arm_pedestal"/>
    <child  link="arm_link1"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis   xyz="0 1 0"/>
    <limit lower="-1.5708" upper="1.5708" effort="50" velocity="2.5"/>
    <dynamics damping="0.2"/>
  </joint>

  <!-- ───── ARM LINK 2 (YELLOW) ───── -->
  <link name="arm_link2">
    <inertial>
      <origin xyz="0 0 0.10"/>
      <mass value="0.4"/>
      <inertia ixx="2e-4" iyy="2e-4" izz="2e-4" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.10" rpy="0 0 -1.5708"/>
      <geometry>
        <box size="0.05 0.05 0.20"/>
      </geometry>
      <material name="yellow"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.10" rpy="0 0 -1.5708"/>
      <geometry>
        <box size="0.05 0.05 0.20"/>
      </geometry>
    </collision>
  </link>
  <joint name="joint2" type="revolute">
    <parent link="arm_link1"/>
    <child  link="arm_link2"/>
    <origin xyz="0 0 0.30" rpy="0 0 0"/>
    <axis   xyz="0 1 0"/>
    <limit lower="-1.5708" upper="1.5708" effort="40" velocity="2"/>
    <dynamics damping="0.15"/>
  </joint>

  <!-- ───── TAPPER (RED) ───── -->
  <link name="tapper_link">
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.05"/>
      <inertia ixx="1e-5" iyy="1e-5" izz="1e-5" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0"/>
      <geometry>
        <sphere radius="0.02"/>
      </geometry>
      <material name="red"/>
    </visual>
    <collision>
      <origin xyz="0 0 0"/>
      <geometry>
        <sphere radius="0.02"/>
      </geometry>
    </collision>
  </link>
  <joint name="tapper_joint" type="fixed">
    <parent link="arm_link2"/>
    <child  link="tapper_link"/>
    <origin xyz="0 0 0.20" rpy="0 0 0"/>
  </joint>

  <!-- Camera Link + Joint -->
<joint name="camera_joint" type="fixed">
  <parent link="tapper_link"/>
  <child link="camera_link"/>
  <origin xyz="0.02 0 0" rpy="0 0 0"/>
</joint>

<link name="camera_link">
  <visual>
    <geometry>
      <box size="0.01 0.01 0.01"/>
    </geometry>
    <material name="gray">
      <color rgba="0.5 0.5 0.5 1"/>
    </material>
  </visual>
</link>



</robot>